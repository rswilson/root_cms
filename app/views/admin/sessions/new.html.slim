css:
	
	body {
		padding-top: 80px;
		padding-bottom: 80px;
		background-color: #4B7399;
	}

	.form-signin {
		max-width: 500px;
		padding: 19px 29px 29px;
		margin: 0 auto 20px;
		background-color: #fff;
		border: 1px solid #e5e5e5;
		-webkit-border-radius: 5px;
		-moz-border-radius: 5px;
				border-radius: 5px;
		-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
		-moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
		box-shadow: 0 1px 2px rgba(0,0,0,.05);
	}
	
	.form-signin .form-signin-heading {
		text-align: center;
		margin-bottom: 30px;
	}
	
	.form-signin .checkbox {
		margin-bottom: 10px;
	}
	

	.form-signin input[type="text"],
	.form-signin input[type="password"] {
		font-size: 16px;
		height: auto;
		margin-bottom: 15px;
		padding: 7px 9px;
	}

- title "Administration Login"

== form_tag sessions_path, :name => "form_login", :class=>"form-signin", :id => "login_form" do |f|

	h2 class="form-signin-heading" Administration Login
	
	- flash.each do |name, msg|
		div class="alert alert-#{name}" id="flash_#{name}"
			button class="close" data-dismiss="alert" type="button" Ã—
			= msg
	
	= text_field_tag :login, params[:login], :class => "input-block-level", :placeholder => "Email address"
	
	= password_field_tag :password, nil, :class => "input-block-level", :placeholder => "Password"
	
	= submit_tag 'Log in', :class => "btn btn-large btn-primary pull-right"
	
	div class="clearfix"
	

javascript:
	$(document).ready(function() {
		document.form_login.login.focus();
	});

	


