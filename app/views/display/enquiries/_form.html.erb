<%= form_for :enquiry, @enquiry, :url => { :controller => "/display/enquiries", :action => "create" } , :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

<table cellpadding="5" cellspacing="0" width="100%">
	<tr>
		<td><%= f.label :first_name, "First Name *" %></td>
		<td><%= f.label :last_name, "Last Name *" %></td>
		<td><%= f.label :email, "Email *" %></td>
	</tr>
	<tr>
		<td><%= f.text_field :first_name, :style => "width: 200px" %></td>
		<td><%= f.text_field :last_name, :style => "width: 200px" %></td>
		<td><%= f.text_field :email, :style => "width: 200px" %></td>
	</tr>
	<tr>
		<td colspan="3"><%= f.label :message, "Message" %></td>
	</tr>
	<tr>
		<td colspan="3"><%= f.text_area :message, :style => "width: 100%" %></td>
	</tr>
	<tr>
		<td colspan="3"><%= f.submit 'Submit Enquiry' %></td>
	</tr>
</table>
<% end %>
